.<section class="container">
    <div class="card">
      <h2 class="card-header d-flex justify-content-between">
        <%= @post.title %>
        <div>
          <%= button_to "Edit post", edit_post_path, class: 'btn btn-secondary', form: {style: 'display:inline-block;'} %>
          <%= button_to "Delete post", post_path(@post), method: :delete, class: "btn btn-danger", form: {style: 'display:inline-block;'} %>
        </div>
      </h2>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= @post.content %></li>
      </ul>
    </div>
</section>


