<div class="card">
  <div class="card-body d-flex justify-content-between">
    <h5 class="card-title"><%= comment.user.present? ? comment.user.username : "User?" %> </h5><!-- ERROR blank comment why? -->
    <p class="card-text">
      <%= comment.content %>
<!--  ERROR    <small><%#= time_ago_in_words(comment.created_at) %> ago</small>-->
    </p>
    <% if current_user == comment.user %>
      <div class="ms-auto">
        <%= button_to 'Delete', [comment.post, comment], method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>