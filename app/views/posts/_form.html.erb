<div class="form-control container">
  <%= simple_form_for @post do |f| %>
    <div class="input-group input-group-lg">
      <span class="input-group-text" id="inputGroup-sizing-lg">Title</span>
      <%= f.input :title, label: false, input_html: { class: 'input' }, wrapper: false %>
    </div>
    <br>
    <div class="field">
      <div>
        <%= f.input :content, label: false, input_html: { class: 'textarea', rows: 4 }, wrapper: false, label_html: {class: 'label'}, placeholder: "Leave a content here"%>
      </div>
    </div>
    <br>
    <%= f.button :submit, class: 'btn btn-secondary' %>
  <% end %>
</div>